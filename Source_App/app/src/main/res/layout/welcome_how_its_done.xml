            android:layout_height="0dp"
            android:layout_weight="20"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:text="Mit den Steuerbalken"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:text="links und rechts"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:text="steuerst du die einzelnen Motoren."/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:text="Mithilfe des Kamerabilds"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:text="weiÃŸt du wo's lang geht!"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"/>
</LinearLayout>